<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:background="#0099FF">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:id="@+id/ImgGlobe"
                android:background="#0099FF"
                android:src="@drawable/ic_action_web_site" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Manit Navg."
                android:id="@+id/txtMN"
                android:textColor="#ffffff"
                android:textStyle="normal"
                android:textSize="23dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:id="@+id/ImgOption"
                android:layout_marginLeft="160dp"
                android:background="#0099FF"
                android:src="@drawable/ic_action_overflow"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#007ACC"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="128dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.45">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/ImgSearch"
                    android:src="@drawable/ic_action_search"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Search"
                    android:id="@+id/btnSearch"
                    android:background="#007ACC"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:textStyle="normal|italic"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:onClick="myClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="128dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.50">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/ImgMaps"
                    android:src="@drawable/ic_action_map"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Maps"
                    android:id="@+id/btnMaps"
                    android:enabled="true"
                    android:textColor="#ffffff"
                    android:visibility="visible"
                    android:background="#007ACC"
                    android:textSize="17sp"
                    android:textStyle="normal|italic"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:onClick="myClick"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="137dp"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/ImgLists"
                    android:src="@drawable/ic_action_view_as_list"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Lists"
                    android:id="@+id/btnLists"
                    android:textColor="#ffffff"
                    android:background="#007ACC"
                    android:textSize="17sp"
                    android:textStyle="normal|italic"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.72"
            android:background="@color/MyLightBlue"
            android:weightSum="1"
            android:gravity="fill">


            <!--<EditText
                android:background="@drawable/layout_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtSource"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.07"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:hint="Source"
                android:textColorHint="#8A8A8A"
                android:shadowColor="#1A4C80"
                android:autoText="false" />-->

            <!--<EditText
                android:background="@drawable/layout_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDestination"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.07"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:hint="Destination"
                android:shadowColor="#1A4C80"
                android:textColorHint="#8A8A8A" />-->


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ground Floor"
                android:id="@+id/btnGroundFloor"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:onClick="myClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  First Floor  "
                android:id="@+id/btnFirstFloor"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Floor"
                android:id="@+id/btnSecondFloor"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
