<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycalc.ranjeet.manitnavg.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:background="@color/MyLightBlue">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#0099FF"
            android:layout_weight="0.33">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:id="@+id/ImgGlobe"
                android:background="#0099FF"
                android:src="@drawable/ic_action_web_site" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Manit Navg."
                android:id="@+id/txtMN"
                android:textColor="#ffffff"
                android:textStyle="normal"
                android:textSize="23dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:id="@+id/ImgOption"
                android:layout_marginLeft="160dp"
                android:background="#0099FF"
                android:src="@drawable/ic_action_overflow"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#007ACC"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="128dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.45">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/ImgSearch"
                    android:src="@drawable/ic_action_search"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Search"
                    android:id="@+id/btnSearch"
                    android:background="#007ACC"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:textStyle="normal|italic"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:onClick="myClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="128dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.50">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/ImgMaps"
                    android:src="@drawable/ic_action_map"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Maps"
                    android:id="@+id/btnMaps"
                    android:enabled="true"
                    android:textColor="#ffffff"
                    android:visibility="visible"
                    android:background="#007ACC"
                    android:textSize="17sp"
                    android:textStyle="normal|italic"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:onClick="myClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="137dp"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/ImgLists"
                    android:src="@drawable/ic_action_view_as_list"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Lists"
                    android:id="@+id/btnLists"
                    android:textColor="#ffffff"
                    android:background="#007ACC"
                    android:textSize="17sp"
                    android:textStyle="normal|italic"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="Follow This Route"
            android:textSize="17sp"
            android:background="#ff27c0ff"
            android:textColor="#ffffff"
            android:paddingLeft="12dp"
            android:textStyle="normal|italic"
            android:gravity="center_vertical" />

        <LinearLayout
            tools:context="com.example.mca_navigation.MainActivity"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:layout_weight="0.74"
            android:gravity="fill"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:shrinkColumns="1"
                        android:stretchColumns="*"
                        android:id="@+id/table" />
                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track"
            android:textColorHighlight="#ffff00"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:onClick="myclick"
            android:background="#007ACC"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="normal|bold"
            android:textSize="17sp" />

    </LinearLayout>

</RelativeLayout>
